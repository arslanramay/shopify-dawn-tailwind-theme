{% stylesheet %}
  .section-padding {
    @apply py-9 md:py-12;
  }
{% endstylesheet %}

<div class="bg-primary text-foreground section-padding" style="--padding-top: {{ section.settings.padding_top }}px; --padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="max-w-screen-xl mx-auto px-4">
    <h2 class="text-2xl font-bold mb-8 text-center">{{ section.settings.heading }}</h2>

    <div class="grid md:grid-cols-2 gap-8">
      <!-- Left Features Grid -->
      <div class="grid sm:grid-cols-2 gap-6">
        {% assign features = 
          "Thickens Hair|Our shampoo will nourish and strengthen your hair, making it noticeably thicker.;" |
          append: "Grows Hair|By strengthening and nourishing your hair, maximum hair growth will be achieved.;" |
          append: "Essential Vitamins|A bespoke blend of vitamins and minerals for the ultimate nutrients required for hair growth.;" |
          append: "No Chemicals|No adverse chemicals, sulfates, paraben and silicone free;" |
          append: "100% Organic|Plant based, all natural formula, developed for the ultimate results.;" |
          append: "Quick Results|Our shampoo works fast, expect to see results after just a few washes."
        | split: ";" %}

        {% for feature in features %}
          {% assign parts = feature | split: "|" %}
          <div>
            <h3 class="text-lg font-semibold text-accent">{{ parts[0] }}</h3>
            <p class="text-sm mt-1">{{ parts[1] }}</p>
          </div>
        {% endfor %}
      </div>

      <!-- Right Large Stat -->
      <div class="flex flex-col items-center justify-center text-center">
        <p class="text-accent font-semibold text-lg mb-1">Plant Based</p>
        <h2 class="text-[120px] leading-none font-extrabold text-white">100%</h2>
        <p class="mt-4 max-w-sm text-base text-white">{{ section.settings.description }}</p>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Shampoo Details",
  "tag": "section",
  "class": "shopify-section section-shampoo-details",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Why Buy Our Hair Thickening Shampoo?",
      "label": "Section Heading"
    },
    {
      "type": "textarea",
      "id": "description",
      "default": "Our Thickening Shampoo will help your hairline look noticeably thicker.",
      "label": "Right Panel Description"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 36,
      "unit": "px",
      "label": "Padding top"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 36,
      "unit": "px",
      "label": "Padding bottom"
    }
  ],
  "presets": [
    {
      "name": "Product Shampoo Details"
    }
  ]
}
{% endschema %}
